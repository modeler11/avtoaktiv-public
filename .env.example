# Основные настройки
# Ваш домен (без http/https)
DOMAIN=your-domain.com
# URL фронтенда (с https для продакшена)
FRONTEND_URL=https://${DOMAIN}
# URL API (обычно /api на том же домене)
NEXT_PUBLIC_API_URL=https://${DOMAIN}/api

# MongoDB настройки
# URI для подключения к MongoDB (не меняйте mongodb:27017 - это внутренний адрес в Docker)
MONGODB_URI=mongodb://mongodb:27017/your_database_name
# Пароль для MongoDB (минимум 16 символов, используйте генератор паролей)
MONGO_PASSWORD=your_secure_password
# Имя пользователя MongoDB
MONGO_USER=your_database_user

# Безопасность
# Секретный ключ для JWT (минимум 32 символа, используйте генератор)
JWT_SECRET=your_jwt_secret_key
# Учетные данные админ-панели
ADMIN_USERNAME=your_admin_username
# Пароль админ-панели (минимум 16 символов, используйте генератор паролей)
ADMIN_PASSWORD=your_secure_admin_password

# Контакты
# Email для связи, отображается на странице контактов
CONTACT_EMAIL=your@email.com

# Настройки сайта
# Заголовок сайта (используется в мета-тегах)
SITE_TITLE=Your Site Title
# Описание сайта (до 160 символов, используется в мета-тегах)
SITE_DESCRIPTION=Your site description
# Ключевые слова (через запятую, используется в мета-тегах)
SITE_KEYWORDS=your,keywords,here

# Дополнительные настройки
# Порт для API (по умолчанию 4000)
PORT=4000
# Режим работы (development/production)
NODE_ENV=production
# Включить/выключить отладочные логи
DEBUG=false